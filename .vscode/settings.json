{
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    { "language": "typescript", "autoFix": true },
    { "language": "typescriptreact", "autoFix": true }
  ],
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "blueprint.templatesPath": ["./.blueprints"],
  "highlight.regexes": {
    "regexFlags": "gi",
    "(// Type: .*)": [{ "backgroundColor": "pink", "color": "black" }],
    "(// Constant: .*)": [{ "backgroundColor": "lightcyan", "color": "black" }],
    "(// Component: .*)": [{ "backgroundColor": "blue", "color": "white" }],
    "(// Helper: .*)": [{ "backgroundColor": "purple", "color": "white" }]
  }
}
